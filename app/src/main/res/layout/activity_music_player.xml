<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.mupetune.MusicPlayer"
    android:id="@+id/musicplayer"
    android:padding="10dp"
    android:background="#FFFF">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/tBPlayStop"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iBBackward"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:background="@drawable/back"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iBForward"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tBPlayStop"
        android:contextClickable="true"
        android:background="@drawable/fore"
        android:layout_marginBottom="8dp" />

    <ToggleButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/tBPlayStop"
        android:textOn=" "
        android:textOff=" "
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iBBackward"
        android:layout_marginLeft="35dp"
        android:checked="false"
        android:foreground="@drawable/pause"
        android:background="@drawable/newpause"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvCurrentTime"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/tvTotalTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvTotalTime"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/seekBar"
        android:layout_toEndOf="@+id/tvCurrentTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvSongsN"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:id="@+id/ivSongImage"
        android:layout_below="@+id/tvSongsN"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/tvTotalTime"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:id="@+id/ibMode"
        android:layout_alignBottom="@+id/tBPlayStop"
        android:layout_alignEnd="@+id/ivSongImage"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="10dp" />
</RelativeLayout>
