<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.mupetune.Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        ​<ImageView
            android:id="@+id/profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prof"
            android:background="#686868"
            android:padding="1dp"
            android:adjustViewBounds="false" />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="40dp"
            android:id="@+id/txtUsername"
            android:layout_marginStart="37dp"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profPic" />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Friends: 100"
            android:id="@+id/txtFriends"
            android:layout_below="@+id/txtUsername"
            android:layout_alignStart="@+id/txtUsername" />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/btnHistory"
            android:layout_below="@+id/profPic"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:layout_alignParentEnd="true"
            android:background="#ffffff" />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Groups"
            android:id="@+id/btnGroups"
            android:layout_below="@+id/btnHistory"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favorite Groups"
            android:id="@+id/btnFavGroups"
            android:layout_below="@+id/btnGroups"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"/>
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/btnNotifications"
            android:layout_below="@+id/btnFavGroups"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"/>
        ​</RelativeLayout>
    </ScrollView>
</RelativeLayout>
